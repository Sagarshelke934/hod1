#include <iostream>
#include <string>

using namespace std;

struct Student {
    int rollNo;
    string name;
    float sgpa;
};

int binarySearchByName(Student arr[], int n, string name) {
    int low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low +high)/ 2;
        if (arr[mid].name == name) return mid;
        if (arr[mid].name < name) low = mid + 1;
        else high = mid - 1;
    }
    return -1;
}

int main() {
    int n;
    cout << "Enter the number of students: ";
    cin >> n;

    Student arr[n];

    for (int i = 0; i < n; ++i) {
        cout << "Enter details for student " << i + 1 << ":\n";
        cout << "Roll No: ";
        cin >> arr[i].rollNo;
        cout << "Name: ";
        cin >> arr[i].name;
        cout << "SGPA: ";
        cin >> arr[i].sgpa;
    }

    string nameToSearch;
    cout << "Enter the name to search: ";
    cin >> nameToSearch;

    int result = binarySearchByName(arr, n, nameToSearch);

    if (result == -1)
        cout << nameToSearch << " not found" << endl;
    else
        cout << nameToSearch << " found at index " << result << endl;

return 0;
}
